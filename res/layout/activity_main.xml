<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/cld_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >
            
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@null" />
        </LinearLayout>
        
	    <TextView
	        android:id="@+id/frgm_tv_title"
	        android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1"
	    	android:gravity="center"
	        android:textSize="18sp"
	        android:textColor="#48bfea"
	        android:text="我的日历" />
	    
	     <LinearLayout
            android:id="@+id/btn_new"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right" >

            <ImageView
                android:id="@+id/img_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@null" />
            
         </LinearLayout>
    </LinearLayout>
    
    <View 
       android:layout_width="match_parent"
	   android:layout_height="10dp" 
	   android:background="#e1e4e9" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="16dp"
        android:background="#ffffff"
        android:gravity="left|center_vertical" 
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cld_solar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="2016.01.27"
            android:textColor="#444444"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/cld_lunar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="（腊月十八）"
            android:textColor="#444444"
            android:textSize="8sp" 
            android:layout_marginLeft="9dp" />
    </LinearLayout>
       
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="20dp"
       android:background="#ffffff" >
       <View 
           android:layout_width="10dp"
           android:layout_height="match_parent"
           android:background="@null"/>
       <TextView
           style="@style/weekName"
           android:text="日" />
       <View 
           android:layout_width="10dp"
           android:layout_height="match_parent"
           android:background="@null"/>
       <TextView
           style="@style/weekName"
           android:text="一" />
       <View 
           android:layout_width="12dp"
           android:layout_height="match_parent"
           android:background="@null"/>
       <TextView
           style="@style/weekName"
           android:text="二" />
       <View 
           android:layout_width="12dp"
           android:layout_height="match_parent"
           android:background="@null"/>
       <TextView
           style="@style/weekName"
           android:text="三" />
       <View 
           android:layout_width="12dp"
           android:layout_height="match_parent"
           android:background="@null"/>
       <TextView
           style="@style/weekName"
           android:text="四" />
       <View 
           android:layout_width="12dp"
           android:layout_height="match_parent"
           android:background="@null"/>
       <TextView
           style="@style/weekName"
           android:text="五" />
       <View 
           android:layout_width="12dp"
           android:layout_height="match_parent"
           android:background="@null"/>
       <TextView
           style="@style/weekName"
           android:text="六" />
       <View 
           android:layout_width="10dp"
           android:layout_height="match_parent"
           android:background="@null"/>
   </LinearLayout>
    
   <com.hz.android_calendar.view.JazzyViewPager
      android:id="@+id/calendar_view"
      android:layout_width="match_parent"
      android:layout_height="243dp"
      android:layout_marginTop="0dp"> 
   </com.hz.android_calendar.view.JazzyViewPager>
     
   <View 
      android:layout_width="match_parent"
   	  android:layout_height="10dp" 
   	  android:background="#e1e4e9" />
     
   <LinearLayout 
       android:orientation="vertical"
       android:layout_width="match_parent"
	   android:layout_height="0dp"
	   android:layout_weight="1"
	   android:background="#ffffff" >
       
	   <ListView 
	       android:id="@+id/calender_schedule"
	       android:layout_width="match_parent"
	   	   android:layout_height="match_parent" 
	   	   android:divider="@null" />  
	   	   
   </LinearLayout>	
  
</LinearLayout>










